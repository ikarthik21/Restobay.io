<link rel="stylesheet" href="/css/cart.css" /> 

<% if(!session.cart) { %>
    <section id="empt">
      <div id="crt">
        <div>
          <h1>Your Cart is Empty</h1>
          <h1 id ="emoj"> &#128529;</h1>
          <h3>You have not added items please add itmes in your cart.Go to orders page and add items.</h3>
          <img src="/img/emptcrt.png" alt="" />
   
          
        </div>
        <div>
            
        <a href="/orders" class="href-bt">Go to Orders</a>

        </div>
    
      </div>
    </section>
    <% } else { %>

    <section id="crt-box">
        <div id="cart-box-cont">
            
          <div id="crt-box-head">
            <i class="fa-solid fa-cart-shopping fa-2x"></i>
                    <h1>Order Summary</h1>
          </div>
  
          <div id="crt-itms">
            <% for(let pizza of Object.values(session.cart.items)) { %>
            <div class="cart-item">
           
            <div class="crt-itm-img-bx">
           <img src="/img/<%= pizza.item.image %>" alt="">
           <h2><%= pizza.item.name %></h2>
            </div>
            <div class="crt-itm-qty-bx">
               <h2><%= pizza.qty %></h2>
            </div>
            <div class="crt-itm-cost-bx">
                              <h2><%= pizza.item.price *pizza.qty  %></h2>
            </div> 
            
              
            </div>
            <% } %>
       
                </div>
                   <div id="crt-tot-box">
                     <h2>Total Amount:</h2> <span><%= session.cart.totalPrice %></span>
                   </div>
  
                   <div class="pg-form">
                    <form action="/pay" method="post">
                    
                        <% if(user){ %>
                        <div id="sep-submit">
                            <input id="frm-sub"  type="submit" value="Order">
                        </div>
                        
                        <% } %>
                      
                           
                    </form>
                    
                    <% if(!user){ %>
                    <a id="log-redirect" href="/sign">Login</a>
                     </div>
                     <% } %>
                      
                  </div>
           </section>
           <% } %>
  