<link rel="stylesheet" href="/css/signfrm.css" /> 
<section id="home">
  <div id="home-box">
    <div id="img-box">
      <img src="img/img1.png" alt="" />
    </div>
    <div id="text-box">
      <div id="txt-box-txt">
        <h2>Welcome To Restobay</h2>

        <p>
          Book Order Enjoy..!
         <button id="get-start">Get Started</button>
        </p>
        <div id="operations">
          <div id="book-table">
            <i class="fa-sharp fa-solid fa-utensils"></i>
      
            <a href="/booktable"> Book a Table </a>
          </div>
          <div id="order-food">
            <i class="fa-sharp fa-solid fa-burger"></i>

            <a href="/orders"> Order Food </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="middle">
  <div class="our-rest">
    <h2>Our Restaurant</h2>
  </div>
  <div class="carousel" data-flickity='{ "autoPlay": 1750}'>
    <img src="img/fi2.jpg" alt="" class="carousel-cell" />
    <img src="img/fi1.jpg" alt="" class="carousel-cell" />
    <img src="img/fi3.jpg" alt="" class="carousel-cell" />
    <img src="img/fi4.jpg" alt="" class="carousel-cell" />
    <img src="img/fi5.jpg" alt="" class="carousel-cell" />
  </div>
</section>
<section id="contact">
  <div class="our-rest">
    <h2>Contact Us</h2>
  </div>

  <div id="contact-us">
    <div class="cntct-itm" id="cont-det">
      <h3>Contact Details</h3>
      <p>
        <i class="fa-sharp fa-solid fa-phone"></i>
        +91 9999999999
      </p>
      <p>
        <i class="fa-sharp fa-solid fa-envelope"></i>
        restobayfood@gmail.com
      </p>
      <p>
        <i class="fa-sharp fa-solid fa-house"></i> 2-56, Newtown, Hyderabad
      </p>
    </div>

    <div class="cntct-itm" id="location">
      <h3>Locations</h3>
      <p>
        <i class="fa-sharp fa-solid fa-location-pin"></i> Newtown, Hyderabad
      </p>
      <p>
        <i class="fa-sharp fa-solid fa-location-pin"></i> New Bandra, Mumbai
      </p>
      <p>
        <i class="fa-sharp fa-solid fa-location-pin"></i> Opp SPSD ,New
        Delhi
      </p>
      <p>
        <i class="fa-sharp fa-solid fa-location-pin"></i> Old Bus
        stop,Chennai
      </p>
    </div>

    <div class="cntct-itm" id="timings">
      <h3>Timings</h3>
      <h4>Lunch</h4>
      <p>Take-out & Dine-In (Daily): 11am -3pm</p>
      <h4>Dinner</h4>
      <p>Indoor dinning (Daily) : 4pm – 10pm</p>
      <p>Outdoor dinning (Thur – Sun) 4pm -10pm</p>
      <p>Happy Hour (Mon – Fri) 4pm – 6pm</p>
    </div>
  </div>
</section>
<section id="feedback">
  <div class="our-rest">
    <h2>Feedback</h2>
  </div>
  <div id="bottom-sec">
    <div id="subs-sec">
        <h3>
            Subscribe Us
        </h3>
        <p>
           <form action="/subscribes" method="post">
            <input class="subs-sec-input" type="text" placeholder="Enter mail to subscribe" name="email" id="">
            <input class="subs-sec-input" type="hidden"  name="name"  >
            <input class="subs-sec-input" type="hidden"   name="phone"  >
            
            
              <input id="subs-button" type="submit" value="submit">
      
              
      
            
           </form>

        </p>


    </div>
    <div id="form-sec">
      <%  if(messages.error) { %>
        <span class="all-req"><%= messages.error1 %></span>
        <% } %>
      <form action="/feedback" method="post">
        <div class="form-ele">
          <label for="name">Name: </label>

          <input
            type="text"
            name="name"
            id="name"
            placeholder="Enter your name"
          />
        </div>

        <div class="form-ele">
          <label for="email">Email: </label>
          <input
            type="email"
            name="email"
            id="email"
            placeholder="Enter your email"
          />
        </div>

        <div class="form-ele">
          <label for="phone">Phone Number: </label>
          <input
            type="phone"
            name="phone"
            id="phone"
            placeholder="Enter your phone"
          />
        </div>

        <div class="form-ele">
          <label for="message">Message: </label>
          <textarea
            name="message"
            id="message"
            cols="30"
            rows="10"
          ></textarea>
          
        </div>
        <div class="form-ele">
        <input id="frm-sub" type="submit" value="Submit">
    </div>


      </form>
    </div>
  </div>
</section> 
